<div class="container">
	<div class='page-header'>
		<h2>Say Hi To: <%=user.firstName + ' ' + user.lastName%></h2> 
	</div>

	<form action="" method="POST" role="form">

		<div class="form-group">
			<label for="">Title</label>
			<input type="text" class="form-control" id="messageBody" placeholder="title?" name='hiTitle'>
		</div>
		<div class="form-group">
			<label for="">Message</label>
			<textarea type="text" class="form-control" id="messageBody" placeholder="what would you like to say?" name='hiBody'></textarea>
		</div>

		<button type="submit" class="btn btn-primary">Send</button>
	</form>
	<a id='home' href="/community" type='button' class='btn btn-primary white'>Back</a>
</div>